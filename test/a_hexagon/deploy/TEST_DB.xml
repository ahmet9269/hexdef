<?xml version="1.0" encoding="UTF-8"?>
<package>
    <metadata>
        <name>a_hexagon</name>
        <pseudo_name>a_pseudo</pseudo_name>
        <version>1.0.0</version>
        <description>Hexagonal Architecture application package</description>
        <author>Development Team</author>
        <created_date>2024-01-01</created_date>
    </metadata>
    
    <configuration>
        <database>TEST_DB</database>
        <datagram_target>new_datagram</datagram_target>
        <environment>production</environment>
    </configuration>
    
    <components>
        <component name="app" type="application">
            <path>src/a_hexagon</path>
            <binary>bin/a_pseudo_app</binary>
            <dependencies>
                <dependency>lib/common</dependency>
            </dependencies>
        </component>
        
        <component name="dark" type="service">
            <path>src/dark_src</path>
            <binary>bin/a_pseudo_dark</binary>
            <dependencies>
                <dependency>lib/common</dependency>
            </dependencies>
        </component>
        
        <component name="white" type="service">
            <path>src/white_src</path>
            <binary>bin/a_pseudo_white</binary>
            <dependencies>
                <dependency>lib/common</dependency>
            </dependencies>
        </component>
    </components>
    
    <build>
        <makefile>Makefile</makefile>
        <targets>
            <target name="all">Build all components</target>
            <target name="clean">Clean build artifacts</target>
            <target name="install">Install to deployment directory</target>
            <target name="test">Run all tests</target>
        </targets>
    </build>
    
    <deployment>
        <deploy_dir>deploy</deploy_dir>
        <config_dir>etc</config_dir>
        <log_dir>var/log</log_dir>
        <data_dir>var/data</data_dir>
    </deployment>
    
    <runtime>
        <startup_command>bin/a_pseudo_app</startup_command>
        <shutdown_command>pkill -f a_pseudo</shutdown_command>
        <health_check>
            <interval>60</interval>
            <endpoint>/health</endpoint>
        </health_check>
    </runtime>
</package>