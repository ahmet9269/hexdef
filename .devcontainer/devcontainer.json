    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.env.linux": {
                    "DATAGRAM_DIR_PATH": "/workspaces/hexdef/test/datagram_dir",
                    "SCHEMAS_DIR": "/workspaces/hexdef/schemas",
                    "DB": "kafka",
                    "NEW_DATAGRAM_FILE_PATH": "/workspaces/hexdef/schemas/datagram.xml",
                    "NEW_DATAGRAM_TARGET_NAME": "new_datagram",
                    "MW_NAME": "Kafka",
                    "DATAGRAM_SAVE_DIR": "adapters/common",
                    "DATAGRAM": "/workspaces/hexdef/schemas/datagram.xml"
                }
            }
        }
    },
    "postCreateCommand": "source /workspaces/hexdef/initial.sh"
}
